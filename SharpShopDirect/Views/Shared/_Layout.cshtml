<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                

                @*@Html.ActionLink("SharpShop.direct", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@


            </div>
            <div class="navbar-collapse collapse">


                <ul class="nav navbar-nav">

                    <li>
                        <span>
                            <a href="@Url.Action("Index", "Home")" class="pull-left">
                                <img src="~/Images/SharpShop.png" title="title" alt="SharpShop.direct" width="240" />
                            </a>
                        </span>
                    </li>


                </ul>


                <ul class="nav navbar-nav">
                                      
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Wardrobe
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Jackets", "Jackets", "Home")</li>
                            <li>@Html.ActionLink("Tops", "Tops", "Home")</li>
                            <li>@Html.ActionLink("Skirts", "Skirts", "Home")</li>
                            <li>@Html.ActionLink("Pants", "Pants", "Home")</li>
                            <li>@Html.ActionLink("Dresses", "Dresses", "Home")</li>
                            <li>@Html.ActionLink("Accessories", "Accessories", "Home")</li>
                            <li>@Html.ActionLink("All", "Collections", "Home")</li>

                            @*<li>@Html.ActionLink("Necessities", "Necessities", "Home")</li>*@

                        </ul>
                    </li>
                    
                    <li>@Html.ActionLink("Matilda's Say", "Index", "Blogs")</li>
                    <li>@Html.ActionLink("Trunk Show", "TrunkShow", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("ItemList", "About", "Items")</li>


                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year -<img src="~/Images/SharpShop.png" width="120"></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
